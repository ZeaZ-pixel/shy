{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "sourceMap": true, 
    "noImplicitAny": true, 
    "skipLibCheck": true,
    "outDir": "./build",
    "rootDirs": ["./src", "./test"],
    "baseUrl": "./src", 
    "incremental": false,
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"],
  "exclude": ["node_modules"],
}
