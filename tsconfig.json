{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext"], 
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "sourceMap": true, 
    "noImplicitAny": true, 
    "skipLibCheck": true,
    "removeComments": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "./test"],
    "baseUrl": "./src", 
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
